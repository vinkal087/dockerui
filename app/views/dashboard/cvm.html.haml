= render 'shared/sidebar'
= render 'shared/navbar'
#wrapper
  .panel.panel-default
  /%nav.navbar.navbar-inverse{:role => "navigation"}
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => "#"} CVM Imstanses
  
  #navbarCollapse.collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li.active
        %a{:href => "#"} Home
      %li
        %a{:href => "#"} Profile
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          Actions
          %b.caret
        %ul.dropdown-menu{:role => "menu"}
          %li
            %a{:href => "#"} upause 
          %li
            %a{:href => "#"} pause
          %li
            %a{:href => "#"} Suspend
          %li.divider
          %li
            %a{:href => "#"} kill
    %form.navbar-form.navbar-right{:role => "search"}
      .form-group
        %input.form-control{:placeholder => "Search", :type => "text"}
    
        
    
  / Table
  %table.table.table-bordered
    %thead
      %tr
        %th #
        %th Name
        %th Owner
        %th Image
        %th Status
        %th Ispublic
    %tbody
      - @cvms.each_with_index do |cvm,index|
        %tr
          %td
            %input{:name => "action_cvm", :type => "radio" ,:value => cvm['id']}
          %td= cvm['container_name'] 
          %td= cvm['username']
          %td= cvm['name']
          %td= cvm['state']
          %td= cvm['ispublic']
 
   
