   $('#terminalpanel').show();
   $('#tablediv').hide();
   
   
}
function getdetails(){
	var id = $('#cvm_radio:checked').val();
   $.get("/dashboard/listderivedimages/"+id, function(data){
   	alert(data);
   });
   $('#terminalpanel').hide();
   $('#tablediv').hide();
   $('#detailspanel').show();
}

